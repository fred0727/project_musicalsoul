<!DOCTYPE html>
<html lang="en">
<%- include('../../partials/header', { title: "Dashboard - Packs | Music & Soul", type: null, includePushNotifications: false }); %>

<body>
    <%- include('../../partials/nav'); %>
    <div class="columns">
        <div class="column is-one-quarter">
            <%- include('../../partials/aside'); %>
        </div>
        <div class="column">
            <div class="box">
                <div class="table-container">
                    <table class="table is-fullwidth">
                        <thead>
                            <tr>
                                <th><abbr title="Name">Nombre</abbr></th>
                                <th>Precio</th>
                                <th class="collapsable">Tipo de pago</th>
                                <th class="collapsable"><abbr title="Telf">Descripcion</abbr></th>
                                <!-- <th class="collapsable"><abbr title="Procedencia">Procedencia</abbr></th> -->
                                <th class="collapsable"><abbr title="Tipo">Duración</abbr></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% rows.sort((a, b) => a.position - b.position).forEach((row) => { %>
                            <tr class="row">
                                <td>
                                    <a href="/panel/dashboard/packs/<%= row.id %>">
                                        <%= row.name %>
                                    </a>
                                </td>
                                <td>
                                    <a href="/panel/dashboard/packs/<%= row.id %>">
                                        <%= row.price %>
                                    </a>
                                </td>
                                <td class="collapsable">
                                    <a href="/panel/dashboard/packs/<%= row.id %>">
                                        <%= row.subscription ? "Suscripción" : "Pago único" %>
                                    </a>
                                </td>
                                <td class="collapsable">
                                    <a href="/panel/dashboard/packs/<%= row.id %>">
                                        <%- row.description %>
                                    </a>
                                </td>
                                <td class="collapsable">
                                    <a href="/panel/dashboard/packs/<%= row.id %>">
                                        <%= row.duration %>
                                    </a>
                                </td>
                            </tr>
                            <% }); %>

                        </tbody>
                    </table>
                </div>
                <div class>
                    <a class="button is-primary" href="/panel/dashboard/packs/create">Crear nuevo</a>
                </div>
            </div>
        </div>
    </div>
    <script src="/static/js/modal.js"></script>
    <script src="/static/js/nav.js"></script>
    <script src="/static/js/script.js"></script>
</body>

</html>